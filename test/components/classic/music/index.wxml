<!--components/classic/music/index.wxml-->
<view hidden="{{hidden}}" class='container'>
  <image class="img rotation {{playing ? '' : 'paused'}}" src="{{img}}" />
  <image class="playBtn" bind:tap="onPlay" src="{{playing ? pauseSrc : playSrc}}" />
  <image class='tag' src="images/music@tag.png" />
  <text>{{content}}</text>
</view>
