.container{
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}
.container>.img{
  width: 422rpx;
  height: 422rpx;
  margin-top: 60rpx;
  border-radius: 50%;
}
.container>.tag{
  width: 44rpx;
  height: 128rpx;
  position: relative;
  bottom: 160rpx;
  right: 310rpx;
}
.container>text{
  font-size: 36rpx;
  max-width: 550rpx;
  position: relative;
  bottom: 85rpx;
}

.playBtn{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  bottom: 270rpx;
}

@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

.rotation {
  -webkit-transform: rotate(360deg);
  animation: rotation 12s linear infinite;
  -moz-animation: rotation 12s linear infinite;
  -webkit-animation: rotation 12s linear infinite;
  -o-animation: rotation 12s linear infinite;
}

.paused{
  animation-play-state: paused;
}



